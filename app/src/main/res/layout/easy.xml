<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/button31"
        android:layout_gravity="center"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onClickeasy"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFF00"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="#FFFF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:onClick="onClickeasy"
        android:id="@+id/button32"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_alignTop="@+id/button31"
        android:layout_toRightOf="@+id/button31"
        android:background="@drawable/buttonshape"
        />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:onClick="onClickeasy"
        android:textColor="#FFFF00"
        android:id="@+id/button33"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/button31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:onClick="onClickeasy"
        android:textColor="#FFFF00"
        android:id="@+id/button34"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="@drawable/buttonshape"
        android:layout_alignTop="@+id/button33"
        android:layout_toRightOf="@+id/button33"
        android:layout_toEndOf="@+id/button33" />


</RelativeLayout>